{
  "manifest_version": 2,
  "name": "AlwaysOff",
  "version": "0.1",
  "description": "Remove spam site from Google search query.",
  "author": "Mirai Kim(Suyeong Rhie)",
  "homepage_url": "https://github.com/noxowl/AlwaysOff",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*.google.com/search",
    "*://*.google.co.kr/search"
  ],
  "background": {
    "scripts": ["alwaysoff.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/alwaysoff-on.png",
      "32": "icons/alwaysoff-on.png"
    }
  }
}
